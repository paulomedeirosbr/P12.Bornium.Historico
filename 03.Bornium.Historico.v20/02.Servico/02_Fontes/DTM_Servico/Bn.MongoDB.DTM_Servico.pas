procedure ServiceController(CtrlCode: DWord); stdcall;
begin
//--------------------------------------------------------------------------------------------------------------------------------------------------------------
  Bornium_MongoDB.Controller(CtrlCode);
//--------------------------------------------------------------------------------------------------------------------------------------------------------------
end;

function TBornium_MongoDB.GetServiceController: TServiceController;
begin
//--------------------------------------------------------------------------------------------------------------------------------------------------------------
  Result := ServiceController;
//--------------------------------------------------------------------------------------------------------------------------------------------------------------
end;


procedure TBornium_MongoDB.ServiceStart(Sender: TService; var Started: Boolean);
begin
//--------------------------------------------------------------------------------------------------------------------------------------------------------------
  try
    oServidor.HTTP.Active:= True;
  Except
    on E : Exception do begin
      TOBJ_Windows.RegistroLogWindows('Bn.Mongo', E.Message + '->' + ClassName +'.BtIniciarClick');
    end;
  end;
//--------------------------------------------------------------------------------------------------------------------------------------------------------------
end;

procedure TBornium_MongoDB.ServiceStop(Sender: TService; var Stopped: Boolean);
begin
//--------------------------------------------------------------------------------------------------------------------------------------------------------------
  try
    oServidor.HTTP.Active:= False;
  Except
    on E : Exception do begin
      TOBJ_Windows.RegistroLogWindows('Bn.Mongo', E.Message + '->' + ClassName +'.BtIniciarClick');
    end;
  end;
//--------------------------------------------------------------------------------------------------------------------------------------------------------------
end;

